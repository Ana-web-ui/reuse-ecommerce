datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Produto {
  id           Int       @id @default(autoincrement())
  nome         String
  descricao    String?
  preco        Float
  imagem       String
  criadoEm     DateTime  @default(now())
  atualizadoEm DateTime  @updatedAt
  itens        Carrinho[]
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String
  carrinho  Carrinho[]
}

model Carrinho {
  id         Int      @id @default(autoincrement())
  usuarioId  Int
  produtoId  Int
  quantidade Int      @default(1)

  usuario Usuario @relation(fields: [usuarioId], references: [id])
  produto Produto @relation(fields: [produtoId], references: [id])

  @@unique([usuarioId, produtoId]) // garante 1 linha por produto/usu√°rio
}
